{
  "name": "seam",
  "private": true,
  "workspaces": [
    "packages/server/core/typescript",
    "packages/server/injector",
    "packages/server/adapter/bun",
    "packages/server/adapter/node",
    "packages/server/adapter/hono",
    "packages/client/vanilla",
    "packages/client/react",
    "packages/cli/pkg",
    "examples/standalone/server-bun",
    "examples/standalone/server-node",
    "examples/standalone/client-vanilla",
    "examples/standalone/client-react"
  ],
  "type": "module",
  "scripts": {
    "lint": "oxlint && eslint . && cargo clippy --workspace --all-features --all-targets",
    "lint:oxlint": "oxlint",
    "lint:eslint": "eslint .",
    "lint:clippy": "cargo clippy --workspace --all-features --all-targets",
    "lint:fix": "oxlint --fix && eslint . --fix",
    "fmt": "chore . && oxfmt --write . && dprint fmt && cargo fmt --all",
    "fmt:oxfmt": "oxfmt --write .",
    "fmt:md": "dprint fmt",
    "fmt:rust": "cargo fmt --all",
    "fmt:check": "oxfmt --check . && dprint check",
    "fmt:path": "chore ."
  },
  "devDependencies": {
    "dprint": "^0.51.1",
    "eslint": "^10.0.0",
    "eslint-plugin-oxlint": "^1.46.0",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "tsx": "^4.21.0",
    "typescript-eslint": "^8.55.0"
  }
}
