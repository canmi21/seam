{
  "name": "seam",
  "private": true,
  "workspaces": [
    "packages/server/core/typescript",
    "packages/server/injector",
    "packages/server/adapter/bun",
    "packages/server/adapter/node",
    "packages/client/vanilla",
    "packages/client/react",
    "packages/cli/pkg",
    "examples/server-bun",
    "examples/server-node",
    "examples/client-vanilla",
    "examples/client-react"
  ],
  "type": "module",
  "scripts": {
    "lint": "oxlint --tsconfig tsconfig.base.json",
    "fmt": "chore . && oxfmt --write . && cargo fmt --all",
    "fmt:oxfmt": "oxfmt --write .",
    "fmt:rust": "cargo fmt --all",
    "fmt:check": "oxfmt --check .",
    "fmt:path": "chore ."
  },
  "devDependencies": {
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "tsx": "^4.21.0"
  }
}
