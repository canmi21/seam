{
  "name": "seam",
  "private": true,
  "workspaces": [
    "packages/server",
    "packages/adapter-bun",
    "packages/adapter-node",
    "packages/client",
    "packages/cli",
    "packages/injector",
    "packages/seam-react",
    "demo/backend/typescript",
    "demo/backend/node",
    "demo/frontend",
    "demo/frontend-react"
  ],
  "type": "module",
  "scripts": {
    "lint": "oxlint --tsconfig tsconfig.base.json",
    "fmt": "chore . && oxfmt --write . && cargo fmt --all",
    "fmt:oxfmt": "oxfmt --write .",
    "fmt:rust": "cargo fmt --all",
    "fmt:check": "oxfmt --check .",
    "fmt:path": "chore ."
  },
  "devDependencies": {
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "tsx": "^4.0.0"
  }
}
